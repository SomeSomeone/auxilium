<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div class="error">
      <% @user.errors.full_messages.each do |message| %>
        <p><b><%= message %></b></p>
      <% end %>
      
    </div>
  <% end %>
  <div class ="center_block_green">
    <div class="field">

      <%= f.text_field :name , :placeholder=>"Username"%>
    </div>
    <div class="field">
      <%= f.email_field :mail , :placeholder=>"Email"%>
    </div>
    <div class="field">
      <%= f.password_field :password , :placeholder=>"Password"%>
    </div>
    <div class="field">
      <%= f.password_field :password_confirmation , :placeholder=>"Confirm"%>
    </div>
  </div>
    <br>
      <%= f.submit  :class => "center_button_submit_green" %>
  
<% end %>